# 02-bastion/terraform.tfvars.example

# Name of the project
project = "your_project_name_here"

# VPC ID (from 01-vpc output)
vpc_id = "vpc-xxxxxxxxxxxxxxxxx"

# Private subnet IDs (from 01-vpc output)
private_subnet_ids = [
  "subnet-xxxxxxxxxxxxxxxxx",
  "subnet-xxxxxxxxxxxxxxxxx"
]

# Public subnet IDs (optional, for NAT or bastion access)
public_subnet_ids = [
  "subnet-xxxxxxxxxxxxxxxxx",
  "subnet-xxxxxxxxxxxxxxxxx"
]

# EC2 instance type for the bastion host
instance_type = "t3.micro"

# SSH key pair name
key_name = "your_key_pair_name_here"

# Tags applied to all resources
tags = {
  Environment = "dev"
  Project     = "your_project_name_here"
}
